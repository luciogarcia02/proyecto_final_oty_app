<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewAsignacion">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editInventario"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_background"
        android:elegantTextHeight="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:hint="Inventario"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/nombreEquipoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editDNI"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"

        android:layout_marginEnd="40dp"
        android:background="@drawable/custom_background"
        android:elegantTextHeight="true"
        android:hint="DNI"
        android:inputType="number"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/nombreCompletoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buscarInventarioBtn" />

    <Button
        android:id="@+id/confirmarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#138B00"
        android:elegantTextHeight="true"
        android:text="CONFIRMAR"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buscarDNIBtn" />

    <Button
        android:id="@+id/buscarInventarioBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elegantTextHeight="true"
        android:minHeight="48dp"
        android:text="BUSCAR"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/editDNI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estadoEquipoText" />

    <Button
        android:id="@+id/buscarDNIBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elegantTextHeight="true"
        android:minHeight="48dp"
        android:text="BUSCAR"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmarBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areaText" />

    <TextView
        android:id="@+id/nombreCompletoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/areaText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDNI" />

    <TextView
        android:id="@+id/areaText"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/buscarDNIBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreCompletoText" />

    <TextView
        android:id="@+id/nombreEquipoText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintBottom_toTopOf="@+id/estadoEquipoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editInventario" />

    <TextView
        android:id="@+id/estadoEquipoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/buscarInventarioBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreEquipoText" />

    <ImageButton
        android:id="@+id/lectorAsignacion"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="323dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="40dp"
        android:src="?attr/actionModeSelectAllDrawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editInventario" />

</androidx.constraintlayout.widget.ConstraintLayout>