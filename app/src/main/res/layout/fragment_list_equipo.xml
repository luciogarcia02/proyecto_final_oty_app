<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ListEquipo">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewEquipos"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_background"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Buscar"
        app:searchIcon="@drawable/lupa"
        android:elegantTextHeight="true"
        android:paddingStart="10dp"
        />

    <TextView
        android:id="@+id/titleListaEquipos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:autoSizeMaxTextSize="35dp"
        android:text="Equipos"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewEquipos" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ListaEquipos"
        android:layout_width="409dp"
        android:layout_height="350dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottonAregarEquipos">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/bottonAregarEquipos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="159dp"
        android:backgroundTint="#004A8B"
        android:text="Alta Equipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleListaEquipos" />
</androidx.constraintlayout.widget.ConstraintLayout>


