<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPersonal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#D9D9D9"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/dniPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="38.456.230"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/nombrePersonal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombrePersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Lucas"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/apellidoPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="gomez"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/areaPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biologia"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
