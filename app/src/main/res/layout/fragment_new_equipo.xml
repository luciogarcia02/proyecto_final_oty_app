<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewEquipo"
    tools:visibility="visible">

    <ImageButton
        android:id="@+id/btnEscEquipo"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginStart="-5dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="48dp"
        android:background="@color/white"
        android:paddingTop="20px"
        android:src="@drawable/bcode"
        app:layout_constraintBottom_toTopOf="@+id/btnEscAnet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nroEquipo"
        app:layout_constraintTop_toBottomOf="@+id/btnEscInventario" />

    <ImageButton
        android:id="@+id/btnEscAnet"
        android:layout_width="41dp"
        android:layout_height="45dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="-4dp"
        android:background="@color/white"
        android:paddingTop="20px"
        android:src="@drawable/bcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nroAnet"
        app:layout_constraintTop_toBottomOf="@+id/btnEscEquipo" />

    <EditText
        android:id="@+id/nroInventario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/custom_background"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/nroEquipo"
        app:layout_constraintEnd_toStartOf="@+id/btnEscInventario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <EditText
        android:id="@+id/nroEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/custom_background"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/nroAnet"
        app:layout_constraintEnd_toStartOf="@+id/btnEscEquipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nroInventario" />

    <EditText
        android:id="@+id/nroAnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/custom_background"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editar1"
        app:layout_constraintEnd_toStartOf="@+id/btnEscAnet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nroEquipo" />

    <Button
        android:id="@+id/editar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="282dp"
        android:backgroundTint="#146517"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nroAnet"
        app:cornerRadius="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="161dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="-30dp"
        android:text="Alta Equipo"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/imageMonitor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnEscInventario"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:paddingTop="20px"
        android:src="@drawable/bcode"
        app:layout_constraintBottom_toTopOf="@+id/btnEscEquipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nroInventario"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/altaInvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de inventario"
        app:layout_constraintBottom_toTopOf="@+id/nroInventario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/altaEqTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de equipo"
        app:layout_constraintBottom_toTopOf="@+id/nroEquipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nroInventario"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/altaAnetTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de Serie ANET"
        app:layout_constraintBottom_toTopOf="@+id/nroAnet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nroEquipo"
        app:layout_constraintVertical_bias="0.764" />

    <ImageView
        android:id="@+id/imageMonitor"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/monitor"
        android:tint="#004A8B"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titulo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504" />

</androidx.constraintlayout.widget.ConstraintLayout>